<Window x:Class="WpfDocCompiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDocCompiler"
        xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
        mc:Ignorable="d"
        Title="Document Compiler - Articles with TOC" Height="600" Width="800"
        Background="#F5F5F5">

    <Window.Resources>
        <local:FileNameConverter x:Key="FileNameConverter"/>
        <local:FileIconConverter x:Key="FileIconConverter"/>

        <!-- Modern Style -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3" />
        <SolidColorBrush x:Key="AccentColor" Color="#FFC107" />
        <SolidColorBrush x:Key="DarkColor" Color="#1976D2" />

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource PrimaryColor}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkColor}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="LightGray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="20">
            <StackPanel>
                <TextBlock Text="Document Compiler" FontSize="24" FontWeight="Bold" Foreground="White" />
                <TextBlock Text="Create professional documents with author list, table of contents, editorial and articles" 
                           FontSize="14" Foreground="White" Opacity="0.9" />
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Article List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Articles (drag to reorder)" FontWeight="SemiBold" 
                               FontSize="16" Margin="0,0,0,10" />

                    <ListBox Grid.Row="1" Name="filesListBox"
                             dd:DragDrop.IsDragSource="True"
                             dd:DragDrop.IsDropTarget="True"
                             BorderThickness="1" BorderBrush="#E0E0E0"
                             Background="White">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F8F8" CornerRadius="4" Padding="10" Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="📄" FontSize="20" Margin="0,0,10,0" />
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Converter={StaticResource FileNameConverter}}" 
                                                       FontWeight="Medium" />
                                            <TextBlock Text="{Binding}" FontSize="11" Foreground="Gray"
                                                       TextTrimming="CharacterEllipsis" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Grid.Column="1" Margin="15,40,0,0" Width="180">
                <Button Name="btnAddFiles" Content="➕ Add Articles" Click="AddFiles_Click" />
                <Button Name="btnRemoveFile" Content="➖ Remove Selected" Click="RemoveFile_Click" />
                <Button Name="btnMoveUp" Content="⬆ Move Up" Click="MoveUp_Click" />
                <Button Name="btnMoveDown" Content="⬇ Move Down" Click="MoveDown_Click" />

                <Separator Margin="0,20" />

                <Button Name="btnAddEditorial" Content="📝 Select Editorial" 
                        Background="{StaticResource AccentColor}" Click="AddEditorial_Click" />

                <Separator Margin="0,20" />

                <Button Name="btnCompile" Content="📦 Compile Document" 
                        FontSize="16" Padding="15,10" IsEnabled="False"
                        Background="#4CAF50" Click="Compile_Click" />
            </StackPanel>
        </Grid>

        <!-- Editorial Status -->
        <Border Grid.Row="2" Margin="20,0,20,10" Background="#E3F2FD" CornerRadius="4" Padding="10">
            <TextBlock Name="editorialStatus" Text="No editorial selected" />
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#333" Padding="10">
            <TextBlock Name="statusTextBlock" Text="Ready" Foreground="White" />
        </Border>
    </Grid>
</Window>